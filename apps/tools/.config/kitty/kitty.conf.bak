#: set ft=conf #

font_size 18

adjust_line_height  4
adjust_column_width 0

disable_ligatures never

# Cursor Customization
cursor #cccccc

# TERM env
term xterm-256color
# term xterm-kitty

# background_opacity 0.50

enable_audio_bell no

confirm_os_window_close 10

linux_display_server x11

# tokyo night is the beauty
# include themes/tokyo_night.conf
# include themes/latte.conf

# include themes/kanagawa.conf

# include themes/latte.conf
# background_image_layout tiled
# background_image /home/vision/Downloads/pt.png
# background_tint 0.55

include theme.conf

macos_option_as_alt yes
map cmd+n send_text all \x1bn
map cmd+h send_text all \x1bh
map cmd+k send_text all \x1bk


# BEGIN_KITTY_FONTS
font_family      family="Fira Code Medium"
bold_font        family="Fira Code Bold"
italic_font      family="Fira Code Italic"
bold_italic_font family="Fira Code Bold Italic"
# END_KITTY_FONTS
